{{#each erros}}
    <div id="alert-{{@key}}" class="alert alert-danger shadow"><strong onclick="closeAlert({{@key}})" class="cursor-pointer fs-5 text-dark">X </strong><span>{{text}}</span></div>
{{else}}

{{/each}}

{{#if error}}
    <div id="alert-1" class="alert alert-danger shadow"><strong onclick="closeAlert('1')" class="cursor-pointer fs-5 text-dark">X </strong><span>{{error}}</span></div>
{{/if}}

{{#if success_msg}}
    <div id="alert-temp" class="alert alert-success">{{success_msg}}</div>
{{/if}}

