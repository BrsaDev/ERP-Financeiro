{{#each erros}}
    <div id="alert-{{@key}}" class="alert alert-danger shadow"><strong onclick="closeAlert({{@key}})" class="cursor-pointer fs-5 text-dark">X </strong><span>{{text}}</span></div>
{{else}}

{{/each}}

<div class="d-flex direction-column">
    <div>
        <a href="/" class="nav-link align-start p-0 me-4">
            <i class="fs-5 bi-house text-black"></i>
        </a>
    </div>
    <div><h5>Cadastrar usuário</h5></div>
</div>
<div class="card shadow-lg">
    <div class="card-body">
        <form action="/usuario/cadastrar" method="post">
            <div class="row rem0948">
                <div class="col-12 col-sm-12 col-md-6">
                    <div class="mb-1">
                        <label class="form-label" for="nome">Nome: </label>
                        <input autocomplete="off" type="text" name="nome" class="form-control form-control-sm" value="{{dados.nome}}" autofocus required>
                    </div>
                    <div class="row">
                        <div class="mb-1 col-12 col-md-6">
                            <label class="form-label" for="email">Email: </label>
                            <input autocomplete="off" type="email" name="email" class="form-control form-control-sm" value="{{dados.email}}" required placeholder="email@exemplo.com">
                        </div>
                        <div class="mb-1 col-12 col-md-6">
                            <label class="form-label" for="status">Status: </label>
                            <select class="form-select form-select-sm" name="status" required>
                                <option selected>{{dados.status}}</option>
                                <option value="Ativo">Ativo</option>
                                <option value="Inativo">Inativo</option>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="mb-1 col-12 col-md-6">
                            <label class="form-label" for="senha">Senha: </label>
                            <input type="text" autocomplete="off" name="senha" class="form-control form-control-sm" value="{{dados.senha}}" required>
                        </div>
                        <div class="mb-1 col-12 col-md-6">
                            <label class="form-label" for="confirmar_senha">Confirmar senha: </label>
                            <input type="text" autocomplete="off" name="confirmar_senha" class="form-control form-control-sm" value="{{dados.confirmar_senha}}" required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 col-sm-12 col-md-6 mb-1">
                            <label class="form-label" for="empresa_padrao">Cod. empresa: </label>
                            <input type="text" autocomplete="off" placeholder="busca inteligente..." name="cod_empresa_padrao" class="form-control form-control-sm" value="{{dados.cod_empresa_padrao}}" onkeyup="filtro(this, 'empresas', true)" required>
                            <div id="popupFiltro-cod_empresa_padrao" class="d-none card card-body mt-2 shadow-sm popupFiltro scroll"></div>
                        </div>
                        <div class="mb-1 col-12 col-sm-12 col-md-6">
                            <label class="form-label" for="empresa_padrao">Empresa padrão: </label>
                            <input type="text" autocomplete="off" placeholder="busca inteligente..." name="empresa_padrao" class="form-control form-control-sm" value="{{dados.empresa_padrao}}" onkeyup="filtro(this, 'empresas')" required>
                            <div id="popupFiltro-empresa_padrao" class="d-none card card-body mt-2 shadow-sm popupFiltro scroll"></div>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-sm-12 col-md-6">
                    <div class="row">
                        <div class="mb-1 col-12 col-md-6">
                            <label class="form-label" for="sexo">Sexo: </label>
                            <select class="form-select form-select-sm" name="sexo" required>
                                <option selected>{{dados.sexo}}</option>
                                <option value="Masculino">Masculino</option>
                                <option value="Feminino">Feminino</option>
                            </select>
                        </div>
                        <div class="mb-1 col-12 col-md-6">
                            <label class="form-label" for="nascimento">Data nascimento: </label>
                            <input type="date" name="nascimento" class="form-control form-control-sm" value="{{dados.nascimento}}" required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="mb-1 col-12 col-md-6">
                            <label class="form-label" for="nickname">Login: </label>
                            <input type="text" name="nickname" class="form-control form-control-sm" value="{{dados.nickname}}" required>
                        </div>
                        <div class="mb-1 col-12 col-md-6">
                            <label class="form-label" for="cod_usuario">Código usuário: </label>
                            <input type="text" name="cod_usuario" class="form-control form-control-sm" value="{{dados.cod_usuario}}" readonly>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="mb-1 col-12 col-md-6">
                            <label class="form-label" for="telefone">Telefone: </label>
                            <input type="tel" autocomplete="off" name="telefone" class="form-control form-control-sm" placeholder="99 9988-7766" value="{{dados.telefone}}" pattern="([0-9]{2}) [0-9]{4}-[0-9]{4}" required>
                        </div>
                        <div class="mb-1 col-12 col-md-6">
                            <label class="form-label" for="whatsapp">Whatsapp: </label>
                            <input type="tel" autocomplete="off" name="whatsapp" class="form-control form-control-sm" placeholder="99 98877-6655" value="{{dados.whatsapp}}" pattern="([0-9]{2}) [0-9]{5}-[0-9]{4}">
                        </div>
                    </div>
                    <div class="row">
                        <div class="mb-1 col-12 col-md-6">
                            <label class="form-label" for="cargo">Cargo: </label>
                            <input type="text" autocomplete="off" placeholder="busca inteligente..." name="cargo" class="form-control form-control-sm" value="{{dados.cargo}}" onkeyup="filtro(this, 'cargos')" required>
                            <div id="popupFiltro-cargo" class="d-none card card-body mt-2 shadow-sm popupFiltro scroll"></div>
                        </div>
                        <div class="mb-1 col-12 col-md-6">
                            <label class="form-label" for="cargo">Admin? </label>
                            <select class="form-select form-select-sm" name="eAdmin" required>
                                <option selected>{{dados.eAdmin}}</option>
                                <option value="1">Sim</option>
                                <option value="0">Não</option>
                            </select>
                        </div>
                    </div>
                    
                </div>
            </div>
            <button type="submit" class="btn btn-success mt-4 fw-bold">Cadastrar</button>
        </form>
    </div>
</div>
<div class="d-none" id="cargos"></div>
<div class="d-none" id="empresas"></div>


<script>
    const baseUrl = "http://localhost:8089"
    async function listDados(tipo) {
        let resultado = await fetch(`${ baseUrl }/${ tipo.slice(0, -1) }/obter`)//http://localhost:8089
        resultado = await resultado.json()
        let mainDiv = document.querySelector('#' + tipo)
        for ( let dados of resultado[tipo] ) {
            let div = document.createElement('div')
            div.innerHTML = `<span>${dados.id}</span> <span>${dados.nome}</span>`
            mainDiv.appendChild(div)
        }
    }
    listDados('cargos')
    listDados('empresas')
</script>

